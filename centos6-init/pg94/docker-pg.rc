# docker-pg.rc

# PostgreSQL version
PGSQL_VER=9.4.6

# pgTap version
PGTAP_VER=0.96.0

# PostgreSQL Base
PGSQLBASE="postgresql-${PGSQL_VER}"

# pgTap base
PGTAPBASE="pgtap-${PGTAP_VER}"

# Source URLs
PGSQL_SRC="https://ftp.postgresql.org/pub/source/v${PGSQL_VER}/${PGSQLBASE}.tar.gz"
PGTAP_SRC="http://api.pgxn.org/dist/pgtap/${PGTAP_VER}/${PGTAPBASE}.zip"

# PostgreSQL envs
PGHOME=/opt/postgresql
PGDATA=/opt/postgresql/data
PGUSER=postgres
PGPORT=5480

# TARGET DATABASE(s)
PGDATABASES=""

