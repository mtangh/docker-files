# docker-bash

# docker bash
docker-bash() {
  local _container="$(get-container-id)"
  [ -n "${_container}" ] || {
    _container="$(get-container-id ${1:-})" &&
    shift
  }
  [ -n "${_container}" ] || {
    cat <<_USAGE_
Usage: $FUNCNAME [CONTAINER] [BASH-ARG...]

_USAGE_
    return 1
  }
  docker exec -it ${_container} /bin/bash "$@"
  return $?
}

