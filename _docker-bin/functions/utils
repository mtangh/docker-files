# utilities

__adjustcolwidth() {
  local _collength=${1:-20}
  local _targetcol=${1:-1}
  cat |
  ${AWK} -vm=${_collength} -vc=0 '
{if(m<length($'"${_targetcol}"')){m=length($'"${_targetcol}"')}};\
END{c=8*(int(m/8));if((m%8)>0){c=c+8;};print(c);}
' 2>/dev/null
  return $?
}

