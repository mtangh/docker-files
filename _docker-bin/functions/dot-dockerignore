# dot-dockerignore
dot-dockerignore() {
  local dockerfile=""
  for dockerfile in $(find . -type f -a -name "Dockerfile" 2>/dev/null)
  do
    docker_dir="${dockerfile%/*}"
    echo "$FUNCNAME: $docker_dir"
    /bin/cp -f "${DOCKER_BIN_DIR}/templates/dot.dockerignore" \
          "${docker_dir}/.dockerignore"    
  done
  return 0
}

